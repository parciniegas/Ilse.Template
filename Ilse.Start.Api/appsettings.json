{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "Authentication": {
    "DefaultScheme": "Bearer",
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "http://localhost:57677",
          "https://localhost:44359",
          "http://localhost:5136",
          "https://localhost:7258"
        ],
        "ValidIssuer": "dotnet-user-jwts"
      },
      "LocalAuthIssuer": {
        "ValidAudiences": [
          "https://localhost:7259",
          "http://localhost:5259"
        ],
        "ValidIssuer": "local-auth"
      }
    }
  },
  "ConnectionStrings": {
    "Redis": "eshop.redis:6379"
  },
  "Ilse": {
    "Endpoints": {
      "LogRequests": true
    },
    "Cqrs": {
      "LogErrors": true,
      "LogCommands": true,
      "LogCommandResults": true,
      "LogQueries": true,
      "LogQueryResults": true
    },
    "CorrelationId": {
      "HeaderName": "X-Correlation-ID",
      "CorrelationIdName": "CorrelationId",
      "EnforceHeader": true,
      "AddToResponse": true,
      "AddToLoggingScope": true,
      "UseTraceId": false
    },
    "MultiTenant": {
      "HeaderName": "X-Tenant-ID",
      "EnforceTenantId": true,
      "AddToResponse": true,
      "AddToLoggingScope": true,
      "Tenants": [
        {
          "Id": "Default",
          "Prefix": "DEF",
          "Name": "Default tenant",
          "ConnectionString": "Host=localhost;Database=Ilse;Username=postgres;Password=postgres"
        },
        {
          "Id": "ExtIblu",
          "Prefix": "EXT",
          "Name": "ExtIBLU tenant",
          "ConnectionString": "Host=localhost;Database=Catalog;Username=postgres;Password=postgres"
        },
        {
          "Id": "GML",
          "Prefix": "GML",
          "Name": "Tenant 2",
          "ConnectionString": "Host=localhost;Database=GML_Catalog;Username=postgres;Password=postgres"
        }
      ]
    },
    "Repository": {
      "SoftDelete": true,
      "EnableTrace": false,
      "ConnectionString": "Host=localhost;Database=Catalog;Username=postgres;Password=postgres",
      "MultiTenant": true,
      "RetryCount": 3,
      "MaxRetryDelay": 500,
      "CreateDatabase": true,
      "Provider": "Postgres",
      "RetryOnFailure": true,
      "MaxPoolSize": 100,
      "MinPoolSize": 0,
      "ConnectionIdleLifetime": 300,
      "ConnectionPruningInterval": 10,
      "ConnectionAcquisitionTimeout": 30
    }
  },
  "UseDeveloperExceptionPage": false,
  "AllowedHosts": "*"
}
